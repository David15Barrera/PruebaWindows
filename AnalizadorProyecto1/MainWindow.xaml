        <TabControl HorizontalAlignment="Left" Height="269" Margin="0,33,0,0" VerticalAlignment="Top" Width="798" Grid.ColumnSpan="3">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <RichTextBox x:Name="CodigoText" HorizontalAlignment="Left" Height="231" Margin="10,62,0,0" VerticalAlignment="Top" Width="775" Grid.ColumnSpan="3">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Ingrese codigo"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
